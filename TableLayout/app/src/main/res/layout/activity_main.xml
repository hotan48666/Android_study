                android:layout_span="3"
                android:padding="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:gravity="center"
                android:padding="10dp"
                android:text="등  급 :"
                android:textSize="20dp" />

